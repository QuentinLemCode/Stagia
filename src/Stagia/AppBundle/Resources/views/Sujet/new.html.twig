{% extends '::base.html.twig' %}
{% form_theme form _self %}
{% block title %}Création{% endblock %}
{% block headline %}
    Nouveau sujet de mémoire
{% endblock %}
{% block content %}
<div class="col-lg-8">
    <form action="{{ path('sujet_create') }}" class="form-horizontal" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">{{icon('save') }} Enregistrer</button>
            <a href="{{ path('sujet')}}" class="btn btn-default">{{icon('chevron-left')}} Retour</a>
        </div>
    </form>
</div>
{% endblock %}
