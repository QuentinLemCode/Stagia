<div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{sujet.nom}}</h3>
      </div>
      <div class="panel-body">
        {{sujet.description}}
          <div class="pull-right">
                <div class="dropdown">
                  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Dropdown
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    {% if app.user == sujet.utilisateurCreateur %}<li><a href="{{ path('sujet_edit', { 'id': sujet.id }) }}" >{{icon('edit')}} Modifier</a></li>{% endif %}
                    <li><a href="{{ path('sujet_show', { 'id': sujet.id }) }}" >{{icon('hand-o-right')}} Plus d'infos</a></li>
                  </ul>
                </div>
          </div>
      </div>
    </div>
</div>