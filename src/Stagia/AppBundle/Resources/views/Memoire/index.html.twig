{% extends '::base.html.twig' %}

{% set type = 'memoire' %}
{% set search_path = 'memoire_search' %}
{% set new_path = 'memoire_new' %}

{% block headline %}
    Liste des mémoires
{% endblock %}
{% block title %}
    Mémoire
{% endblock %}

 {% block content %}
    <div id="{{type}}">
        {% include 'StagiaAppBundle:Memoire:listeMemoire.html.twig' %}
    </div>
    {% include 'StagiaAppBundle:Sidebar:sidebar.html.twig' %}
    {% endblock %}

{% block raw_javascript %}
<script type="text/javascript">
        $( document ).ready(function() {
        $(".clickable-row").click(function() {
            window.document.location = $(this).data("href");
        });
        {% if texteRecherche is defined %}
            $('#recherche').val("{{texteRecherche}}");
        {% endif %}
            
        $("#loading").hide();
        var timer;
        $("#recherche").on('keyup',function(){
            timer && clearTimeout(timer);
            timer = setTimeout(postRecherche, 500);
        });
        $("#buttonReset").on('click', function(){
            $('#recherche').val('');
            postRecherche();
        });
        });               
        function postRecherche()
        {

            $("#loading").show();
            var query = $("#recherche").val();
            if(query !== "")
            {
                $("#resetSearch").show();
            }
            else
            {
                $("#resetSearch").hide();
            }
            var data_form = 'recherche=' + query;
            $.ajax({
                type: "POST",
                url: "{{ path(search_path)}}",
                data: data_form,
                cache: false,
                success: function(data){
                    $('#{{type}}').html(data);
                    $("#loading").hide();
                }
            });
            return false;
        }
        
        </script>
{% endblock %}
