{% extends '::base.html.twig' %}
{% block headline %}
    Liste des mémoires
{% endblock %}

{% block content %}
    <div class="col-md-9">
        {% if entities %}
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Année</th>
                        <th>Fichier</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{entity.nom}}</td>
                            <td>{{entity.description}}</td>
                            <td>{{entity.StringAnnee}}</td>
                            <td>
                                {% if entity.getWebPath() != null %}
                                    <a href="{{entity.getWebPath()}}" >{{icon('file-pdf-o')}} Télécharger</a>
                                {% else %}
                                    Pas de fichier
                                {% endif %}
                            </td
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <em>Pas de mémoires</em>
        {% endif %}
    </div>
        <ul>
        <li>
            <a href="{{ path('memoire_new') }}">
                Envoyer un mémoire
            </a>
        </li>
    </ul>
    {% endblock %}
